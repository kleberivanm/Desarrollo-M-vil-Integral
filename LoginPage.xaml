<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppMESAPP.LoginPage"
             Title="Iniciar Sesión">

    <VerticalStackLayout Padding="20" Spacing="15">
        <Entry Placeholder="Correo Electrónico" x:Name="EmailEntry"/>
        <Entry Placeholder="Contraseña" IsPassword="True" x:Name="PasswordEntry"/>

        <Button Text="Ingresar" Clicked="OnLoginClicked"/>
        <HorizontalStackLayout>
            <Button Text="Registrarse" Clicked="OnRegisterClicked"/>
            <Button Text="¿Olvidaste tu contraseña?" Clicked="OnForgotPasswordClicked"/>
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>